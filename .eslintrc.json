{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    "jsx-a11y/alt-text": [0],
    "linebreak-style": ["error", "unix"],
    "no-irregular-whitespace" : [1, {"skipStrings": true ,"skipTemplates": true, "skipJSXText": true}],
    "react/jsx-no-useless-fragment": [0],
    "react/jsx-props-no-spreading": [1, {"html": "ignore"}],
    "react/prop-types": [0], // TODO: enable this
    "react/react-in-jsx-scope": "off"
  }
}
